generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model Product {
  id              String   @id @default(uuid())
  name            String
  slug            String   @unique
  description     String
  websiteUrl      String
  affiliateUrl    String
  pricingSummary  String
  logoUrl         String?
  basePrice       Float    @default(0)
  isPerUser       Boolean  @default(true)
  createdAt       DateTime @default(now())

  reviews         Review[]
  comparisonsA    Comparison[] @relation("ProductA")
  comparisonsB    Comparison[] @relation("ProductB")
  authorId String?
  author   Author? @relation(fields: [authorId], references: [id])
}

model Review {
  id          String   @id @default(uuid())
  productId  String
  rating     Int
  pros       String
  cons       String
  verdict    String
  testedDays Int

  product    Product @relation(fields: [productId], references: [id])
}
model Comparison {
  id          String   @id @default(uuid())
  productAId String
  productBId String
  slug       String   @unique
  summary    String
  winner     String
  radarData   Json?

  productA   Product @relation("ProductA", fields: [productAId], references: [id])
  productB   Product @relation("ProductB", fields: [productBId], references: [id])
  features   ComparisonFeature[]
}


model ComparisonFeature {
  id            String @id @default(uuid())
  comparisonId  String
  label         String
  valueA        String
  valueB        String
  highlightA    Boolean @default(false)
  highlightB    Boolean @default(false)

  comparison    Comparison @relation(fields: [comparisonId], references: [id])
}

model Subscriber {
  id        String   @id @default(uuid())
  email     String   @unique
  source    String?
  createdAt DateTime @default(now())
}

model Author {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  bio         String
  role        String
  avatarUrl  String?
  linkedinUrl String?
  twitterUrl  String?
  websiteUrl  String?
  createdAt  DateTime @default(now())
  products    Product[]
}

